{
  "name": "rollup-plugin-tailwindcss",
  "version": "2.0.0",
  "description": "Bundle Tailwind CSS stylesheet as a Rollup asset",
  "main": "index.js",
  "scripts": {
    "lint:eslint": "eslint --fix",
    "lint:markdownlint": "markdownlint",
    "lint:prettier": "prettier --write --loglevel warn",
    "lint:all:eslint": "yarn lint:eslint --ext .js .",
    "lint:all:markdownlint": "yarn lint:markdownlint '**/*.md'",
    "lint:all:prettier": "yarn lint:prettier '**/*.{css,html,md,js}'",
    "lint": "run-s lint:all:*",
    "test": "tape test/*.js | tap-spec"
  },
  "repository": "https://github.com/nmartin42/rollup-plugin-tailwindcss",
  "keywords": [
    "rollup-plugin",
    "tailwind",
    "tailwindcss"
  ],
  "author": "Alex Dilley <alex.dilley@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.14.0",
    "markdownlint-cli": "^0.31.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "rollup": "^2.72.0",
    "rollup-plugin-postcss": "^4.0.2",
    "tailwindcss": "^3.0.24",
    "tap-spec": "^5.0.0",
    "tape": "^5.5.3"
  },
  "peerDependencies": {
    "rollup": ">=2.72.0",
    "tailwindcss": "^3.0.24"
  },
  "dependencies": {
    "postcss": "^8.4.13",
    "postcss-load-config": "^3.1.4",
    "purgecss": "^4.1.3",
    "rollup-pluginutils": "^4.2.1"
  }
}
